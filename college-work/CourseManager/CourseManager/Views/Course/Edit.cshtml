@{
}

@model Course

<h2>Edit a course</h2>

<div>
    <form asp-controller="Course" asp-action="Edit" asp-route-id="@Model.CourseID" method="post">
        @Html.HiddenFor(m => m.Students)
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="@Model.CourseID" class="form-control" hidden />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Instructor">Instructor</label>
            <input asp-for="@Model.Instructor" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.StartDate">Start Date</label>
            <input asp-for="@Model.StartDate" type="date" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="@Model.RoomNumber">Room Number</label>
            <input asp-for="@Model.RoomNumber" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Cancel</a>
        <a asp-controller="Course" asp-action="Detail" asp-route-id="@Model.CourseID" class="btn btn-outline-info">Back</a>
    </form>
</div>