@model BPViewModel

@{
}

<h2>Add new reading</h2>

<form asp-controller="BP" asp-action="AddNewBP" method="post">
    <a asp-controller="BP" asp-action="Index">Back to list</a>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="form-label">Systolic</label>
        <input type="text" asp-for="NewBPReading.Systolic" class="form-control" />
    </div>
    <div class="form-group">
        <label class="form-label">Diastolic</label>
        <input type="text" asp-for="NewBPReading.Diastolic" class="form-control" />
    </div>
    <div class="form-group">
        <label class="form-label">Date</label>
        <input type="date" asp-for="NewBPReading.Date" class="form-control" />
    </div>
    <div class="form-group">
        <label class="form-label">Position</label>"
        <select asp-for="NewBPReading.PositionId" class="form-control">
            <option value="1">Standing</option>
            <option value="2">Sitting</option>
            <option value="3">Lying down</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>