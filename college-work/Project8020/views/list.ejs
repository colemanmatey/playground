<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <%- include('partials/nav.ejs') %>

    <main>
        <h1>Employee List</h1>
        <button class="btn btn-right" onclick="window.location.href='/employees/add'">Add Employee</button>
        <table>
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(employee => { %>
                    <tr>
                        <td><img style="width: 100px;" src="/uploads/<%= employee.image %>" alt="Profile Image"></td>
                        <td><%= employee.name %></td>
                        <td><%= employee.role %></td>
                        <td><%= employee.department %></td>
                        <td>
                            <button class="btn" onclick="window.location.href='/employees/<%= employee.id %>/detail'">View</a>
                            <button class="btn" onclick="window.location.href='/employees/<%= employee.id %>/edit'">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <%- include('partials/footer.ejs') %>
</body>
</html>