@{
}

@model QuizViewModel

<div>
    <h2>@Model.Quiz.Title</h2>
    <p><strong>Description:</strong> @Model.Quiz.Description</p>
    <p><strong>Created By:</strong> @Model.Quiz.CreatedBy</p>
    <p><strong>Created At:</strong> @Model.Quiz.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>

    <h3>Questions</h3>
    <ul>
        @foreach (var question in Model.Quiz.Questions)
        {
            <li>
                <strong>@question.QuestionText</strong>
                <ul>
                    @foreach (var choice in question.Choices)
                    {
                        <li>@choice.ChoiceText</li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>