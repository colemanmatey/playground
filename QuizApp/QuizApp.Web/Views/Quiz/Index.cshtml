@{
}

@model QuizViewModel

<div>
    <h2>Quizzes</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model.Quizzes)
            {
                <tr>
                    <td>@quiz.Id</td>
                    <td>@quiz.Title</td>
                    <td>@quiz.Description</td>
                    <td>@quiz.CreatedBy</td>
                </tr>
            }
        </tbody>
    </table>
</div>